<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:UnsecureXFApp" x:Class="UnsecureXFApp.MainPage">
    <StackLayout Padding="10">
        <StackLayout Orientation="Horizontal">
            <Entry x:Name="editValidation" Placeholder="Enter secure value" IsPassword="true" HorizontalOptions="FillAndExpand" />
            <Button Clicked="Handle_Clicked" Text="Validate" />
        </StackLayout>
        
        <Label x:Name="txtResult" Text="Click 'Validate' to run check" />
    </StackLayout>
</ContentPage>